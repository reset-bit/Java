<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv"
        android:layout_width="120dp"
        android:layout_height="120dp" />
    <TextView
        android:id="@+id/bname_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="聚划算 "
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_toRightOf="@id/iv"
        android:layout_marginLeft="20dp"
        />
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bname_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:layout_toRightOf="@id/iv"
        android:text="快抢价"
        android:background="@drawable/text_circle_shape"
        android:textColor="@color/white"
        android:textSize="9sp" />
    <TextView
        android:id="@+id/price_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bname_text"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@id/price"
        android:text="10/kg"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/logo1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bname_text"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/iv"
        android:text="低价"
        android:background="@drawable/text3_border_shape"
        android:textColor="@color/tomato"
        android:textSize="8sp" />
    <TextView
        android:id="@+id/logo2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bname_text"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/logo1"
        android:text="包邮"
        android:background="@drawable/text4_border_shape"
        android:textColor="@color/tomato"
        android:textSize="8sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#000"
        android:layout_below="@+id/iv"/>
</RelativeLayout>